{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "i18n-ally.localesPaths": ["packages/blog-app/src/locales"],
  "i18n-ally.keystyle": "nested",
  "editor.codeActionsOnSave": {
    "source.fixAll.biome": "explicit"
  },
  "files.associations": {
    "*.css": "tailwindcss"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  }
}
